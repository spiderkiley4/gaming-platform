{
  "name": "jemcord",
  "version": "1.0.12",
  "description": "Electron Application",
  "main": "dist/main.js",
  "scripts": {
    "build:electron": "tsc",
    "build:frontend": "cd ../frontend && npm run build",
    "copy:frontend": "cpx \"../frontend/dist/**/*\" dist/frontend",
    "build": "npm run build:electron && npm run build:frontend && npm run copy:frontend",
    "watch": "tsc -w",
    "start": "npm run build && cross-env NODE_ENV=production nodemon --watch main.js --exec electron .",
    "prodbuild": "npm run build:electron && NODE_ENV=production npm run build:frontend && npm run copy:frontend",
    "prod": "npm run prodbuild && cross-env NODE_ENV=production nodemon --watch main.js --exec electron .",
    "dev": "concurrently \"cd ../frontend && cross-env ELECTRON=true npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development nodemon --watch main.js --exec electron .",
    "package": "npm run build && electron-builder --linux AppImage --win nsis --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.gaming-platform.app",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "../frontend/dist/**/*",
      "assets/**/*",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "icon": "build/icons/512x512.png",
    "win": {
      "target": "nsis",
      "artifactName": "jemcord-Setup-${version}.${ext}",
      "icon": "build/icons/512x512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "category": "Game",
      "executableName": "jemcord",
      "desktop": {
        "Name": "Jemcord",
        "Comment": "Gaming Platform",
        "Categories": "Game;Network;Chat;",
        "MimeType": "x-scheme-handler/jemcord;",
        "X-GNOME-UsesNotifications": "true",
        "Icon": "jemcord"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "spiderkiley4",
        "repo": "gaming-platform",
        "private": false,
        "releaseType": "release"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/electron-updater/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.5",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "cpx": "^1.2.1",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "electron-log": "^5.3.4",
    "electron-updater": "^6.6.2"
  }
}
